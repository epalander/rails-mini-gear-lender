
<div class="container">
  <%= form_tag items_path, method: :get do %>
    <%= select_tag :what, options_for_select([ "","stroller/pram", "hiking carrier/backpack",  "bike trailer" ], "stroller/pram") %>
    in
    <%= text_field_tag :where,
    params[:where],
    class: "form-control",
    placeholder: "city?"
      %>
    <%= submit_tag "Show me the gear!", class: "btn btn-primary" %>
  <% end %>
</div>

<h1>Stuff for rent</h1>

<ul>
  <% @items.each do |item| %>
    <li><%= link_to item.name, item, id: "link" %><%= link_to 'Edit', edit_item_path(item) %>
      <%= link_to item_path(item),
                      method: :delete,
                      data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash"></i>
          <% end %>
    </li>

        <% end %>
</ul>

<%= link_to 'Add gear to lend', new_item_path %>
