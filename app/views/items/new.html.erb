<div class="container">
  <%= simple_form_for(@item) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <!-- user_id needs to be specified right now since we don't have user sign in set up -->
    <div class="form-inputs">
      <%= f.input :user_id %>
    </div>

    <div class="form-inputs">
      <%= f.input :name %>
    </div>

    <div class="form-inputs">
      <%= f.input :description %>
    </div>

    <div class="form-inputs">
      <%= f.input :category, collection: ['strollers/prams', 'hiking carrier/backpack','bike trailers'] %>
    </div>

    <div class="form-inputs">
      <%= f.input :location %>
    </div>

    <div class="form-inputs">
      <%= f.input :price_per_day %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
