<%= simple_form_for(@item) do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
    </div>

    <div class="form-inputs">
      <%= f.input :description %>
    </div>

    <div class="form-inputs">
      <%= f.input :category, collection: ['stroller/pram', 'hiking carrier/backpack','bike trailer'] %>
    </div>

    <div class="form-inputs">
      <%= f.input :location %>
    </div>

    <div class="form-inputs">
      <%= f.input :price_per_day %>
    </div>

    <div class="form-actions btn btn-primary mt-4">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
