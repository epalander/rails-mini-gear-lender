<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= cl_image_tag @item.photos.first.key, :height=>400, :crop=>"scale", :class=>"d-block w-100" %>
    </div>

    <% @item.photos.drop(1).each do |photo| %>
      <div class="carousel-item">
        <%= cl_image_tag photo.key, :height=>400, :crop=>"scale", :class=>"d-block w-100" %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container d-flex m-5">

  <div class="justify-content-around">
    <div class="mr-5 col-sm-12 col-lg-12">
      <h1><%= @item.name %></h1>
      <p><strong>Owner: </strong><%= @user.first_name %></p>
      <p><strong>Location: </strong><%= @item.location %></p>
      <p><strong>Category: </strong><%= @item.category %></p>
      <h2>Description:</h2>
        <p><%= @item.description %></p>
        <% if current_user == @item.user %>
        <%= link_to edit_item_path(@item) do %>
          <i class="fas fa-pencil-alt"></i>
          <% end %>
          <%= link_to item_path(@item),
                method: :delete,
                data: { confirm: "Are you sure?" } do %>
                <i class="fas fa-trash"></i>
                <% end %>
        <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-lg-6">
        <!-- Map showing the location of the item -->
