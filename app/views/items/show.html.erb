  </div>

</div>

<div class="container mb-5">
    <%= link_to 'Back', items_path, class: "btn btn-primary mt-4" %>
    <%= link_to 'Booking', new_item_booking_path(@item), class: "btn btn-primary mt-4" %>
</div>