<div class="text-center mt-4">
  <h2> See all your <strong>bookings</strong> for items you are <strong>renting</strong>: </h2>
</div>

<div class="container mt-4">
  <div class="row">
    <div class="mt-4 col-sm-12 col-lg-6">
      <div class="cards">
        <% @bookings.each do |booking| %>
        <div class="booking-details">
          <ul class="list-unstyled hidden-sm hidden-xs padded">
            <li><strong>Booking ID: <%= booking.id %> - <%= booking.item.name %></strong></li>
            <li>Dates: <%= booking.start_day %> to <%= booking.end_day %></li>
            <li>Location: <%= booking.item.location %></li>
            <li>Total Price: <%= booking.total_price %> CHF</li>
            <li class="text-left"><%= link_to "Request to delete this booking", booking_path(booking), method: :delete, class:"btn btn-primary", data: {confirm: "Please check with item owner before cancelling"} %></li>
          </ul>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <hr>
<%= link_to "Back to Home", items_path, class:"btn btn-default btn-lg " %>
</div>

